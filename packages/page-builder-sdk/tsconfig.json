{
  "compilerOptions": {
    "lib": ["ES2022"],
    "target": "ES2022",
    "outDir": "./dist/cjs",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "noUnusedLocals": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./dist", "node_modules", "./src/**/__tests__", "./src/**/__mocks__"]
}
